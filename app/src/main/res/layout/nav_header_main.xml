<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <CheckBox
            android:id="@+id/checkbox_pos_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="전체"
            android:checked="true"
            android:onClick="onCheckboxClicked"/>
        <CheckBox
            android:id="@+id/checkbox_pos_noun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="명사"
            android:onClick="onCheckboxClicked"/>
        <CheckBox
            android:id="@+id/checkbox_pos_verb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="동사"
            android:onClick="onCheckboxClicked"/>
        <CheckBox
            android:id="@+id/checkbox_pos_adjective"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="형용사"
            android:onClick="onCheckboxClicked"/>
        <CheckBox
            android:id="@+id/checkbox_pos_adverb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="부사"
            android:onClick="onCheckboxClicked"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <CheckBox
            android:id="@+id/checkbox_cat_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="전체"
            android:checked="true"
            android:onClick="onCheckboxClicked"/>
        <CheckBox
            android:id="@+id/checkbox_cat_construction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="건설"
            android:onClick="onCheckboxClicked"/>
        <CheckBox
            android:id="@+id/checkbox_cat_management"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="경영"
            android:onClick="onCheckboxClicked"/>
        <CheckBox
            android:id="@+id/checkbox_cat_economy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="경제"
            android:onClick="onCheckboxClicked"/>
        <CheckBox
            android:id="@+id/checkbox_cat_propername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="수학"
            android:onClick="onCheckboxClicked"/>
    </LinearLayout>

</LinearLayout>
